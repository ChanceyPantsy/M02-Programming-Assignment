    "# CH4.1\n",
    "secret = 7\n",
    "\n",
    "while True:\n",
    "    # ask for a guess\n",
    "    guess = int(input(\"Guess a number between 1 and 10: \"))\n",
    "\n",
    "    # conditional tests\n",
    "    if guess < secret:\n",
    "        print('too low')\n",
    "    elif guess > secret:\n",
    "        print('too high')\n",
    "    else:\n",
    "        print('just right')\n",
    "        break  # correct guess, so exit the loop"
